<Window x:Class="WpfTesterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTesterApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Background="AliceBlue">
    <Grid MouseMove="Grid_MouseMove">
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="75,58,0,0" VerticalAlignment="Top" Width="75" Background="#FFE4C9C9" Click="button_Click"/>
        <Calendar HorizontalAlignment="Left" Margin="75,98,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
